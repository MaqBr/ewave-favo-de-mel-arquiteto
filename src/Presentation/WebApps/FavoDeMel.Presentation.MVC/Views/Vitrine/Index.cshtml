@model FavoDeMel.Presentation.MVC.ViewModels.CatalogoViewModels.IndexViewModel

@{
    ViewData["Title"] = "Catálogo de produtos";
}

<section class="esh-catalog-filters">
    <div class="container">
        <div class="row">
            <div class="col-8">
                <form asp-action="Index" asp-controller="Vitrine" method="post">
                    <label class="esh-catalog-label" data-title="Tipo">
                        <select asp-for="@Model.FiltroTipo" asp-items="@Model.Tipos" class="esh-catalog-filter"></select>
                    </label>
                    <label class="esh-catalog-label" data-title="Categoria">
                        <select asp-for="@Model.FiltroMarca" asp-items="@Model.Marcas" class="esh-catalog-filter"></select>
                    </label>
                    <input class="esh-catalog-send" type="image" src="~/images/arrow-right.svg" />
                </form>
            </div>
            <div class="col-4">
                <a class="esh-catalog-dashboard-garcom" asp-area="" asp-controller="Comanda" asp-action="IndexGarcom"><span class="fa fa-shopping-cart"></span>Painel Garçom</a>
                <a class="esh-catalog-dashboard-cozinha" asp-area="" asp-controller="Comanda" asp-action="IndexCozinha"><span class="fa fa-shopping-cart"></span> Painel Cozinha</a>
            </div>
        </div>
    </div>
</section>

<div class="container">

    @if (Model.CatalogoItens.Count() > 0)
    {
    <partial name="_paginacao" for="PaginacaoInfo" />

    <div class="esh-catalog-items row">
        @foreach (var catalogoItem in Model.CatalogoItens)
            {
        <div class="esh-catalog-item col-md-4">
            <partial name="_produto" model="catalogoItem" />
        </div>
            }
    </div>

    <partial name="_paginacao" for="PaginacaoInfo" />
    }
    else
    {
    <div class="esh-catalog-items row">
        NENHUM RESULTADO NO CRITÉRIO DA CONSULTA
    </div>
    }
</div>
